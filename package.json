{
  "version": "1.0.0",
  "name": "hyperapp-boilerplate",
  "description": "Hyperapp PWA boilerplate",
  "author": "Alexandre Lotte",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html --open",
    "build": "rimraf .cache && rimraf dist && parcel build ./src/index.html --no-source-maps --detailed-report && workbox generateSW workbox-config.js",
    "render-site": "parcel build ./site-generator/render-site.js --target node --no-minify --no-source-maps --detailed-report --no-content-hash && node ./dist/render-site.js",
    "generate-pages": "parcel build ./site-generator/generate-site.js --target node --no-minify --no-source-maps --detailed-report --no-content-hash && node ./dist/generate-site.js",
    "generate-site": "npm run build && npm run generate-pages"
  },
  "dependencies": {
    "@hyperapp/time": "0.0.10",
    "front-matter": "^3.0.2",
    "fs-extra": "^8.0.1",
    "hyperapp": "^2.0.0-beta.22",
    "hyperapp-render": "^3.1.0",
    "marked": "^0.6.2",
    "postcss-modules": "^1.4.1",
    "puppeteer": "^1.17.0",
    "sanitize.css": "^8.0.1",
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-eslint": "^10.0.1",
    "hygen": "^4.0.2",
    "parcel-bundler": "^1.12.3",
    "postcss-nested": "^4.1.2",
    "rimraf": "^2.6.3",
    "workbox-cli": "^4.3.1"
  }
}
