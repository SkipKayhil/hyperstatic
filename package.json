{
  "version": "1.0.0",
  "name": "hyperapp-site-generator",
  "description": "Hyperapp PWA boilerplate",
  "author": "Alexandre Lotte",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html --open",
    "clean": "rimraf .cache && rimraf dist",
    "create-service-worker": "workbox generateSW workbox-config.js",
    "build": "npm run clean && parcel build ./src/index.html --no-source-maps --detailed-report && npm run create-service-worker",
    "render-pages": "parcel build ./site-generator/render-pages.js --target node --no-minify --no-source-maps --detailed-report --no-content-hash && node ./dist/render-pages.js",
    "static-server": "node ./site-generator/static-server.js"
  },
  "dependencies": {
    "emotion": "^10.0.9",
    "fs-extra": "^8.0.1",
    "hyperapp": "^2.0.0-beta.22",
    "node-fetch": "^2.6.0",
    "postcss-modules": "^1.4.1",
    "puppeteer": "^1.17.0",
    "query-string": "^6.7.0",
    "sanitize.css": "^8.0.1",
    "serialize-javascript": "^1.7.0",
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "hygen": "^4.0.2",
    "marked": "^0.6.2",
    "parcel-bundler": "^1.12.3",
    "postcss-nested": "^4.1.2",
    "rimraf": "^2.6.3",
    "workbox-cli": "^4.3.1"
  }
}
